<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:property-placeholder location="classpath:default.properties"  ignore-resource-not-found="true"/>

	<import resource="classpath:spring-anon.xml"/>
	<import resource="classpath:spring-anon-persistence.xml"/>			

	<context:component-scan base-package="org.anon"/>
	<context:annotation-config/>

	<bean class="org.anon.enterprise.runner.AnonStandaloneRunner"/>

</beans>