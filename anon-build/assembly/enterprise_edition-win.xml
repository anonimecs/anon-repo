<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>enterprise-win</id>
	<formats>
		<format>zip</format>
	</formats>
	<files>
		<file>
			<source>../anon-gui/target/anon-gui-${project.version}-enterprise.war</source>
			<outputDirectory>/anonimecs</outputDirectory>
			<destName>anonimecsEnterprise.war</destName>
		</file>
		<file>
			<source>${project.basedir}/scripts/startEnterprise.bat</source>
			<outputDirectory>/anonimecs</outputDirectory>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/../../anon-repo-db</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>db/db-derby-10.4.2.0-bin/lib/**</include>
				<include>anon/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../../anon-repo-db</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>db/db-derby-10.4.2.0-bin/bin/**/*.bat</include>
			</includes>
		</fileSet>
		
	</fileSets>
</assembly>
