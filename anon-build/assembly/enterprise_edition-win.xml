<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>enterprise-win</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/apache-tomcat-${tomcat.version}</directory>
			<outputDirectory>/app</outputDirectory>
			<excludes>
                <exclude>**/webapps/docs/**</exclude>
                <exclude>**/webapps/examples/**</exclude>
                <exclude>**/webapps/host-manager/**</exclude>
                <exclude>**/webapps/manager/**</exclude>
                <exclude>**/webapps/ROOT/**</exclude>
                <exclude>**/conf/server.xml</exclude>
            </excludes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/db-derby-${derby.version}-bin</directory>
			<outputDirectory>/db</outputDirectory>
			<excludes>
                <exclude>**/test/**</exclude>
                <exclude>**/javadoc/**</exclude>
                <exclude>**/docs/**</exclude>
                <exclude>**/demo/**</exclude>
                <exclude>**/lib/derbyLocale*</exclude>
            </excludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../../anon-repo-db</directory>
			<outputDirectory>/db/data</outputDirectory>
			<includes>
				<include>anon/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/scripts</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>startEnterprise.bat</include>
				<include>stopEnterprise.bat</include>
			</includes>
		</fileSet>
	</fileSets>
	
	<files>
		<file>
			<source>../anon-gui/target/anon-gui-${project.version}-enterprise.war</source>
			<outputDirectory>/anonimecs/app</outputDirectory>
			<destName>anonimecsEnterprise.war</destName>
		</file>
		<file>
			<source>${project.basedir}/config/enterprise_server.xml</source>
			<outputDirectory>/anonimecs/app/conf</outputDirectory>
			<destName>server.xml</destName>
		</file>
	</files>
	
</assembly>
