<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>enterprise</id>
	<formats>
		<format>zip</format>
	</formats>
	<files>
		<file>
			<source>../anon-gui/target/anon-gui-${project.version}-enterprise.war</source>
			<outputDirectory>/anonimecs</outputDirectory>
			<destName>anonimecsEnterprise.war</destName>
		</file>
		<file>
			<source>${project.basedir}/scripts/startEnterprise.sh</source>
			<outputDirectory>/anonimecs</outputDirectory>
			<lineEnding>unix</lineEnding>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>${project.basedir}/scripts/startEnterprise.bat</source>
			<outputDirectory>/anonimecs</outputDirectory>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/../../anon-repo-db</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>db/**</include>
				<include>anon/**</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>

