<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>free</id>
	<formats>
		<format>zip</format>
	</formats>
	
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/apache-tomcat-${tomcat.version}</directory>
			<outputDirectory>/app</outputDirectory>
			<excludes>
				<exclude>**/bin/docs/*.sh</exclude>
                <exclude>**/webapps/docs/**</exclude>
                <exclude>**/webapps/examples/**</exclude>
                <exclude>**/webapps/host-manager/**</exclude>
                <exclude>**/webapps/manager/**</exclude>
                <exclude>**/webapps/ROOT/**</exclude>
                <exclude>**/conf/server.xml</exclude>
                <exclude>**/conf/catalina.properties</exclude>
            </excludes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/apache-tomcat-${tomcat.version}/bin</directory>
			<outputDirectory>/app/bin</outputDirectory>
			 <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/scripts</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>startFree.bat</include>
				<include>stopFree.bat</include>
				<include>startFree.sh</include>
				<include>stopFree.sh</include>
			</includes>
			<lineEnding>unix</lineEnding>
			<fileMode>0755</fileMode>
		</fileSet>
	</fileSets>
	
	<files>
		<file>
			<source>../anon-gui/target/anon-gui-${project.version}-free.war</source>
			<outputDirectory>/anonimecs/app</outputDirectory>
			<destName>anonimecsFree.war</destName>
		</file>
		<file>
			<source>${project.basedir}/config/free_server.xml</source>
			<outputDirectory>/anonimecs/app/conf</outputDirectory>
			<destName>server.xml</destName>
		</file>
		<file>
			<source>${project.basedir}/License/AnonimecsEndUserLicenseAgreement.pdf</source>
			<outputDirectory>/anonimecs</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/License/free/anonlicense.txt</source>
			<outputDirectory>/anonimecs/app</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/config/catalina.properties</source>
			<outputDirectory>/anonimecs/app/conf</outputDirectory>
		</file>
	</files>
</assembly>
